<?php if ($this->hasItems()): ?>
    <div class="gift-coupon-block crosssell-block">
        <div class="top-bg">
            <div class="bottom-bg">
                <div class="crosssell">
                    <h2><?php echo $this->__('Based on your selection, you may be interested in the following items:') ?></h2>
                    <ul>
                        <?php $i=0; foreach ($this->getItemCollection() as $_item): $i++; ?>
                            <li class="item<?php if(sizeof($this->getItemCollection())==$i): ?> last<?php endif;?>">
                                <div class="crosssell-product"><a class="product-image" href="<?php echo $this->getProductUrl($_item) ?>"><img src="<?php echo $this->helper('catalog/image')->init($_item, 'thumbnail')->resize(85); ?>" width="85" alt="<?php echo $this->htmlEscape($_item->getName()) ?>" title="<?php echo $this->htmlEscape($_item->getName()) ?>" /></a></div>
                                <div class="product-shop">
                                    <h3 class="product-name"><a href="<?php echo $this->getProductUrl($_item) ?>"><?php echo $this->htmlEscape($_item->getName()) ?></a></h3>
                                    <?php echo $this->getPriceHtml($_item, true) ?>
                                    <p><button class="button btn-cart" onclick="setLocation('<?php echo $this->getAddToCartUrl($_item) ?>')" type="button"><span class="btn-cart-wrapper"><span class="btn-cart-upper"><?php echo $this->__('Add to Cart') ?></span><span class="btn-cart-lower"><?php echo $this->__('Add to Cart') ?></span></span></button></p>
                                    <ul class="add-to-links">
                                        <?php if ($this->helper('wishlist')->isAllow()) : ?>
                                            <li><a href="<?php echo $this->getAddToWishlistUrl($_item) ?>"><?php echo $this->__('Add to Wishlist') ?></a></li>
                                        <?php endif; ?>
                                        <?php if ($_compareUrl = $this->getAddToCompareUrl($_item)): ?>
                                            <li><span class="separator">|</span> <a href="<?php echo $_compareUrl ?>"><?php echo $this->__('Add to Compare') ?></a></li>
                                        <?php endif; ?>
                                    </ul>
                                </div>
                                <div class="clear"></div>
                            </li>
                        <?php endforeach; ?>
                    </ul>
                </div>
                <div class="clear"></div>
            </div>
        </div>
    </div>
<?php endif; ?>
